	<section id="<%=@goal.id%>">
		<p class="title" data-section-title><a href="#"><%=@goal.goal%></a></p>
		<div class="content" data-section-content>
			<p><ul>
				<% @goal.tasks.each do |task| %>
				<li><%=task.what%></li>
				<% end %>
			</ul></p>
			<%=link_to '[view]', @goal %> <%=link_to '[delete]', @goal, :method => :delete, :class => :destroy, remote: true %>
		</div>
	</section>