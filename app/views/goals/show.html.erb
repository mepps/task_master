<script>
	$(document).ready(function(){
		$('#current').addClass('active');
		$('input').change(function(){

		    if($(this).is(':checked'))
		    {
		    	selector = "#" + $(this).val();
		        $(selector).addClass('done');
		    }
		    else
		    {
		    	selector = "#" + $(this).val();
		        $(selector).removeClass('done');
		    }    
		});
});

</script>
<h3><%=@goal.goal%></h3>
<h3><%=@goal.date.strftime("%m/%d/%Y") %></h3>
<form id="tasks" action="/goals" method="post">
	<% @goal.tasks.each do |task| %>
	<input type="checkbox" class="task" name="task" value="<%=task.id%>" /><a id="<%=task.id%>" class="task_text" href="#" data-reveal-id="show_task_<%=task.id%>"> <%=task.what%></a><br />
	<% end %>
	<input type="submit" value="submit" />
</form>


<a href="#" data-reveal-id="addTask">Add a Task</a>

<div id="addTask" class="reveal-modal">
  <h2>Add a Task</h2>
  <form action="/goals/<%=params[:id]%>/tasks" method="post">
  	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  	<input type="text" name="what" placeholder="What" />
  	<input type="text" name="where" placeholder="Where" />
  	<input type="text" name="how" placeholder="How" />
  	<input type="submit" value="Add">
  </form>
</div>

<% @goal.tasks.each do |task| %>
<div id="show_task_<%=task.id%>" class="reveal-modal">
  <h2><%=task.what%></h2>
  <h3>Where<h3>
  <p><%=task.where%></p>
  <h3>How</h3>
  <p><%=task.how%></p>

</div>
<% end %>

